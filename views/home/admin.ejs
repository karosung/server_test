<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Information</title>
</head>
<body>
  <h1>User Information</h1>
  <table border="1" cellpadding="6">
    <thead>
      <tr>
        <th>Username</th>
        <th>Email</th>
        <th>Full Name</th>
        <th>Phone</th>
        <th>Role</th>
        <th>Active</th>
        <th>Created</th>
      </tr>
    </thead>
    <tbody>
      <% if (users.length === 0) { %>
        <tr><td colspan="7">No users found.</td></tr>
      <% } else { %>
        <% users.forEach(user => { %>
          <tr>
            <td><%= user.username %></td>
            <td><%= user.email %></td>
            <td><%= user.fullName %></td>
            <td><%= user.phoneNumber || "-" %></td>
            <td><%= user.role %></td>
            <td><%= user.isActive ? "Yes" : "No" %></td>
            <td><%= user.createdAt ? user.createdAt.toISOString().slice(0, 10) : "-" %></td>
          </tr>
        <% }) %>
      <% } %>
    </tbody>
  </table>
</body>
</html>
